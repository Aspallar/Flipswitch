{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "rules": {
        "no-extra-parens": ["error", "all"],
        "semi": ["error", "always"],
        "eqeqeq": ["error", "always"],
        "consistent-return": ["error", { "treatUndefinedAsUnspecified": false }]
    },
    "ignorePatterns": ["**/*.min.js"]
}
